<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HuMate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTheme" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto</item>
        <item name="itemTextAppearanceActive">@style/ActiveNavItem</item>
        <item name="itemTextAppearanceInactive">@style/InactiveNavItem</item>
    </style>

    <style name="ActiveNavItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/nav_item_text_color_unselected</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InactiveNavItem" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/nav_item_text_color_selected</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TagButtonUnselected" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item> <!-- 너비 설정 -->
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MatchBranchFilterUnselected" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item> <!-- 너비 설정 -->
        <item name="android:textColor">@color/filter_tag_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">45dp</item>
        <item name="android:dropDownHorizontalOffset">10dp</item>
        <item name="android:dropDownWidth">80dp</item>
    </style>

</resources>